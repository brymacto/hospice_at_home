<h1>Client</h1>

<%= link_to 'Back to all clients', clients_path  %> |
<%= link_to 'Edit', edit_client_path(@client) %>
<h3>First name</h3>
<p><%= @client.first_name %></p>
<h3>Last name</h3>
<p><%= @client.last_name %></p>

<h2>Matches</h2>
<% if @matches.size > 0 %>
    <table>
      <th>Day and time</th>
      <th>Client</th>
      <th>Volunteer</th>
      <% @matches.each do |match| %>
          <tr>
            <td><%= link_to match.day_and_time, match %></td>
            <td><%= match.client_name %></td>
            <td><%= match.volunteer_name %></td>
          </tr>
      <% end %>
    </table>
<% else %>
    <p><%= @client.name %> has no matches.</p>
<% end %>





