<% if @volunteer %>
<h1>Matches for volunteer <%= link_to @volunteer.name, @volunteer %></h1>
    <% elsif @client %>
    <h1>Matches for client <%= link_to @client.name, @client %></h1>
<% else %>
    <% end %>
<%= link_to 'Add a match', new_match_path %>

<ul class="accordion-tabs">
  <li class="tab-header-and-content">
    <a href="javascript:void(0)" class="<% if @initial_tab != 'match_proposal' %>is-active<% end %> tab-link">Matches</a>
    <div class="tab-content">
      <h2>Matches</h2>
      <%= render "matches_table" %>
    </div>
  </li>
  <li class="tab-header-and-content">
    <a href="javascript:void(0)" class="<% if @initial_tab == 'match_proposal' %>is-active<% end %> tab-link">Match proposals</a>
    <div class="tab-content">
      <h2>Match proposals</h2>
      <%= render "match_proposals/match_proposals_table" %>
    </div>
  </li>
</ul>


